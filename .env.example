# API Keys
OPENAI_API_KEY=your_openai_api_key
# OPENROUTER_API_KEY=your_openrouter_api_key
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# LLM Provider Configuration
# Specify which LLM provider to use (openai or openrouter)
# LLM_PROVIDER=openai

# Vector Database Configuration
# Uncomment the one you want to use

# Weaviate
# WEAVIATE_URL=your_weaviate_url
# WEAVIATE_API_KEY=your_weaviate_api_key

# Pinecone
# PINECONE_API_KEY=your_pinecone_api_key
# PINECONE_ENVIRONMENT=your_pinecone_environment
# PINECONE_INDEX=your_pinecone_index

# Chroma
# CHROMA_URL=your_chroma_url
# CHROMA_COLLECTION=your_chroma_collection_name

# Application Settings
DEFAULT_LANGUAGE=ja
BATCH_SIZE=50

# LLM Provider Configuration
# Specify which LLM provider to use for translation
# Default: gpt-4o
# TRANSLATION_LLM=gpt-4o

# Embedding LLM Provider Configuration
# Specify which LLM provider to use for embeddings
# Default: text-embedding-3-small
# EMBEDDING_LLM=text-embedding-3-small
